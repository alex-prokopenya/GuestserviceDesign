<script>

    var showTotal = function()
    {
        var arr = $('.turist_cnt').toArray();

        var ad_price  = parseInt($('#ad_price').html());
        var ch_price  = parseInt($('#ch_price').html());
        var inf_price = parseInt($('#inf_price').html());

        var total_price = parseInt($('#tour_price').html());

        var rate = $('#price_rate').html();

        var summ = 0;

        if(total_price > 0)
        {
            summ = total_price;
        }
        else
        {
            summ =  ad_price * parseInt($(arr[0]).val()) + 
                    ch_price * parseInt($(arr[1]).val()) + 
                    inf_price * parseInt($(arr[2]).val()); 

        }

        //draw
        $('#total_price').html(summ);
        $('#total_rate').html(rate);
    }



    var hideNmen = function(el){

        try
        {
            var maxCnt = 0;

            if($("#max_cnt") != null)
                maxCnt = parseInt( $("#max_cnt").html());

            $('.turist_cnt option').each(function(){
            
                if($(this).attr('value')>maxCnt)
                    $(this).hide();
                else
                    $(this).show();
            });
			showTotal();
        }
        catch (err)
        {
            	alert(err);
        }
    };
    

			var checkNmen = function(){

            try
            {
                var maxCnt = 0;

                if($("#max_cnt") != null)
                    maxCnt = parseInt( $("#max_cnt").html());


                var arr = $('.turist_cnt').toArray();

                var totalCnt = 0;

                for(var i=0; i< arr.length; i++)
                    totalCnt += parseInt($(arr[i]).val());

			//	alert(maxCnt);alert(totalCnt);
                if(totalCnt > maxCnt)
                {
                    $('.error_text').show();
                    $('.turist_cnt').addClass("error");
                    $("#max_cnt_text").html($("#max_cnt").html());
                    $("#add_to_cart_btn").attr("disabled","true");
                }
                else
                {
                    $('.error_text').hide();
                    $('.turist_cnt').removeClass("error");
                    $("#add_to_cart_btn").removeAttr("disabled");
                }
				showTotal();
            }
            catch (err)
            {
			//	alert(err);
			}
        };
</script>

