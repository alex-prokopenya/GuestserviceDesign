                        c: (o && o.categories) ? o.categories : [],
                        dp: (o && o.departures) ? o.departures : [],
                        d: (o && o.destinations) ? o.destinations : [],
                        l: (o && o.languages) ? o.languages : [],
                        so: (o && o.sortorder) ? o.sortorder : '',
                        fd: (o && o.fd) ? o.fd : '',
                        ld: (o && o.ld) ? o.ld : '',
                    },
                    function (result) {
                        excursions([]);
                        excursionsData([]);

                        if( o.version == paramsVersion ) {
                            if (result.excursions) {
                                applySearchParams(o, checkstate);
                                excursionsData(result.excursions);
								
                                var myExc = description().excursion.id;
								for (var i = 0, j = excursionsData().length, m = 2; i < j && i <= m ; i++) {
                                    if (myExc == excursionsData()[i].excursion.id)
                                    {
                                        m++;
                                        continue;
                                    }
                                      excursions.push(prepareExcursion(excursionsData()[i]));
                                }
                            }
                            else
                                applySearchParams(o, checkstate);
                           
                        }
                    }
                );
            },
             doNextExcursionList = function (sh) {
                excursions([]);
				
                if(excursions() && excursionsData() ) {
                    
					var number = showExcursionNumber() + sh;

                    if (number < 0)
                        number = excursionsData().length + number;

                    showExcursionNumber(number);

                    var myExc = description().excursion.id;
                    for (var i = number, j = excursionsData().length, m = i + 2; j > 0 && i <= m; i++) {
                        var modI = i % excursionsData().length;
                        if (excursionsData()[modI].excursion != null && myExc == excursionsData()[modI].excursion.id)
                        {
                            m++;
                            continue;
                        }
                        excursions.push(prepareExcursion(excursionsData()[modI]));
                    }
                }
