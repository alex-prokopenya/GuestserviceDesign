}

$('#ex_width').html('width: '+document.body.clientWidth);

$( "#ex_footer" )
  .mouseover(function() {
	var num_bottom = $(this).css('bottom');
	var footer_ok = $('#footer_ok').val();
	if (num_bottom == '-90px' && footer_ok == 'ok' ) {
	$(this).animate({bottom: '0px'});
	}

  })
