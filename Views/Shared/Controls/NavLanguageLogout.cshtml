                        .a123 {
                            width: 100%;
                            padding: 10px;
                            background-color: grey;
                            margin: 5px;
                            border-radius: 5px;
                            margin-bottom: 10px;
                        }
                    </style>

                    @foreach (var lang in languages.Where(m => m != language))
                    {
                        values["language"] = lang;
                        <div class="a123">
