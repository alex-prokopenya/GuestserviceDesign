@model GuestService.Models.Countries.CountryPartners

@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.Description;
    ViewBag.Keywords = Model.Keywords;
}

<div class="content-wrapper">
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>

    @if (Model.Providers.Length > 0 || Model.Agents.Length > 0)
    {
        <div>
            <ul style="float:left; width: 50%">
                <h2>Providers:</h2>
                @foreach (var region in Model.Providers)
                {
                    <li>@region.Value</li>
                }
                <br/>
                <a href="http://www.exgo.com/guestservice_design/en/info/partnership">How to become our partner?</a>
            </ul>

            <ul style="float:right; width: 50%">
                <h2>Hotels and Agents:</h2>
                @foreach (var region in Model.Agents)
                {
                    <li>@region.Value</li>
                }
                <br/>
                <a href="http://www.exgo.com/guestservice_design/en/info/partnership">How to become our partner?</a>
            </ul>
        </div>
    }

    <div style="clear: both" > </div>
    <h2>@(ViewBag.Title + " Seotext")</h2>
    <p>
        @Model.SeoText
    </p>
</div>
